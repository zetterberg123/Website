---
import BaseLayout from "../layouts/BaseLayout.astro";
import { Icon } from "astro-icon";

const pageTitle = "About - zetterberg123";
const pageDescription = "About me page";
---

<BaseLayout pageTitle={pageTitle} pageDescription={pageDescription}>
	<h1 class="main-header">
		<strong>Here's a little bit of info about me.</strong>
	</h1>
	<p class="main-paragraph">WIP page</p>
	<!-- About section -->
	<section class="flex-row center item-box-section">
		<div class="flex-col center" style="font-size: 20px; min-height: 225px;">
			<div class="flex-row center">
				<Icon name="user" height="1em" width="1em" />
				<h1>Hobbies</h1>
			</div>
			<ul class="flex-col" style="margin: 10px 30px">
				<li>Computer games</li>
				<li>Board games</li>
				<li>Home lab (Server in projects)</li>
				<li>Hiking</li>
			</ul>
		</div>

		<div class="flex-col center" style="font-size: 20px; min-height: 225px;">
			<div class="flex-row center">
				<Icon name="gamepad" height="1.2em" width="1.2em" />
				<h1>Favorite games</h1>
			</div>
			<ul class="flex-col" style="margin: 10px 30px">
				<li>Portal 2</li>
				<li>Splatoon</li>
				<li>Duck Game</li>
				<li>The Legend of Zelda: Twilight Princess</li>
			</ul>
			<a
				class="button"
				style="margin-top: 10px;"
				href=""
				target="_blank"
				rel="noopener noreferrer"
				><i class="fa-brands fa-steam"></i> Steam Profile</a
			>
		</div>

		<div class="flex-col center" style="font-size: 20px; min-height: 225px;">
			<div class="flex-row center">
				<Icon name="bars" height="1em" width="1em" />
				<h1>Other</h1>
			</div>
			<ul class="flex-col" style="margin: 10px 30px">
				<li>I own 3 lizards</li>
				<p style="margin: 0 0 5px 5%; width: 100%; color: lightgray;">- 1 Crested gecko and 2 leopard geckos</p>
				<li>Favorite snack</li>
				<p style="margin: 0 0 5px 5%; width: 100%; color: lightgray;">- Crisps and salty liquorice</p>
				<li>Favorite beverages</li>
				<p style="margin: 0 0 5px 5%; width: 100%; color: lightgray;">- Saft, cider and coffee</p>
			</ul>
		</div>
	</section>
</BaseLayout>
